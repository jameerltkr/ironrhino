<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ironrhino.common.model"
	default-lazy="true">
	<class name="Region" table="common_region">
		<id name="id" type="java.lang.Integer" unsaved-value="null">
			<generator class="identity" />
		</id>
		<natural-id mutable="true">
			<property name="fullId" />
		</natural-id>
		<property name="name" not-null="true" />
		<property name="level" />
		<property name="displayOrder" />
		<property name="latitude" />
		<property name="longitude" />
		<many-to-one name="parent" class="Region" column="parentId" />
		<set name="children" inverse="true" cascade="delete" lazy="true"
			order-by="displayOrder,name">
			<key column="parentId" />
			<one-to-many class="Region" />
		</set>
		<set name="roles" table="common_regionRole" cascade="all"
			fetch="subselect">
			<key column="regionId" />
			<composite-element
				class="org.ironrhino.common.model.SimpleElement">
				<property name="value" not-null="true" />
			</composite-element>
		</set>
	</class>
</hibernate-mapping>