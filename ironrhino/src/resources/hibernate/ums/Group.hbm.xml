<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ironrhino.ums.model"
	default-lazy="true">
	<class name="Group" table="ums_group">
		<id name="id" type="java.lang.String" length="32"
			unsaved-value="null">
			<generator class="uuid" />
		</id>
		<natural-id>
			<property name="name" not-null="true" />
		</natural-id>
		<property name="enabled" />
		<property name="description" />
		<set name="roles" table="ums_group_role" cascade="none"
			fetch="subselect" lazy="false" inverse="false">
			<key column="groupId" />
			<many-to-many class="Role" column="roleId" />
		</set>
	</class>
</hibernate-mapping>