<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="account" namespace="/" extends="ironrhino-default">
		<action name="account"
			class="org.ironrhino.online.action.account.AccountAction">
			<result name="success">
				/WEB-INF/view/jsp/account/index.jsp
			</result>
			<result name="signup">
				/WEB-INF/view/jsp/account/signup.jsp
			</result>
			<result name="login">
				/WEB-INF/view/jsp/account/login.jsp
			</result>
			<result name="openid-form-redirect">
				/WEB-INF/view/jsp/account/openid.jsp
			</result>
			<result name="openid" type="redirect">
				/account/login?tab=openid
			</result>
			<result name="forgot" type="redirect">
				/account/login?tab=forgot
			</result>
			<result name="resend" type="redirect">
				/account/login?tab=resend
			</result>
			<result name="activate" type="redirect">
				/account/manage?tab=profile
			</result>
			<result name="manage">
				/WEB-INF/view/jsp/account/manage.jsp
			</result>
			<result name="profile" type="redirect">
				/account/manage?tab=profile
			</result>
			<result name="password" type="redirect">
				/account/manage?tab=password
			</result>
			<result name="email" type="redirect">
				/account/manage?tab=email
			</result>
			<result name="unbindopenid" type="redirect">
				/account/manage?tab=unbindopenid
			</result>
			<result name="invite" type="redirect">
				/account/manage?tab=invite
			</result>
		</action>
	</package>
	<package name="account-other" namespace="/account"
		extends="ironrhino-default">
		<action name="switch_user">
			<result>/WEB-INF/view/jsp/account/switch_user.jsp</result>
		</action>
		<action name="order"
			class="org.ironrhino.online.action.account.OrderAction">
			<result name="list">
				/WEB-INF/view/jsp/account/order_list.jsp
			</result>
			<result name="addressee">
				/WEB-INF/view/jsp/account/order_addressee.jsp
			</result>
			<result name="view">
				/WEB-INF/view/jsp/account/order_view.jsp
			</result>
		</action>
		<action name="favorite"
			class="org.ironrhino.online.action.account.ProductFavoriteAction">
			<result name="success" type="redirectAction">
				favorite
			</result>
			<result name="list">
				/WEB-INF/view/jsp/account/favorite_list.jsp
			</result>
		</action>
	</package>

</struts>
